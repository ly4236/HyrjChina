@model IEnumerable<HyrjChina.Domain.Entities.Order>

@{
    ViewBag.Title = "鼎智科技 - 我的订单";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<style>
    div {
        display: block;
    }

    .goods-item {
        display: inline-block;
        display: block;
        float: left;
        width: 255px;
        margin-right: 10px;
    }
   .goods-number {
    float: left;
    width: 40px;
    text-align: left;
    color: #aaa;
    font-family: verdana;
}
   .goods-item .p-img {
    float: left;
    width: 60px;
    height: 60px;
    border: 1px solid #efefef;
    margin: 0 14px;
    _display: inline;
}
   .goods-item .p-msg {
    float: left;
    width: 160px;
}
</style>
<div class="page-content">
    <div class="page-header">
        <h1>我的订单</h1>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-11">
                    <form class="form-horizontal">
                        <div class="form-group">

                        </div>
                        <div class="form-group">

                        </div>
                        <div class="form-group"></div>
                        <div class="form-group"></div>
                    </form>


                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    订单详情
                                </th>
                                <th>收货人</th>
                                <th>金额</th>
                                <th>

                                    状态
                                </th>
                                <th>操作</th>
                            </tr>

                        </thead>
                        @foreach (var item in Model)
                        {
                            <tbody>
                                <tr><td colspan="5"></td></tr>
                                <tr>
                                    <td colspan="5">
                                        <span>@item.CreateTime</span>
                                        订单号：<a name="orderIdLinks" href="#" target="_blank">@item.OrderNumber</a>
                                    </td>
                                </tr>


                                @for (int i = 0; i < item.OrderItems.Count; i++)
                                {
                                    var orderItem = item.OrderItems.ToList()[i];
                                    <tr>
                                        <td>
                                            <div class="goods-item">
                                                <div class="p-img">
                                                    <a href="#">
                                                        <img style="height:60px; width: 60px; display: block;"
                                                             src="@Url.Action("GetImage", "Product", new { id = orderItem.ProductId })" />
                                                    </a>

                                                </div>

                                                <div class="p-msg">
                                                    <span>@orderItem.Product.Name</span>
                                                </div>
                                            </div>
                                                <div class="goods-number">
                                                    x @orderItem.Quantity
                                                </div>
                                          
                                        </td>
                                        @if (i == 0)
                                        {

                                            <td rowspan="@item.OrderTotal">
                                                @item.User.Name
                                            </td>
                                            <td rowspan="@item.OrderTotal">
                                                <div class="amount">
                                                    <span>总额 ¥@item.OrderTotal</span>
                                                </div>
                                            </td>
                                            <td rowspan="@item.OrderTotal">
                                                <div class="amount">
                                                    <span>@item.OrderStatus</span>
                                                </div>
                                            </td>
                                            <td rowspan="@item.OrderTotal">
                                                <button>立即购买</button>
                                            </td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        }
                    </table>

                </div>

            </div>
        </div>
    </div>

</div>