@model HyrjChina.Domain.Entities.Product

<div class="col-sm-6 col-md-4 col-lg-3 @ViewData["css"] ">
    <div class="thumbnail">
        @if (Model.ImageData == null)
            {
            <img style="height: 250px; width: 100%; display: block;" src="~/Content/images/no-image.png" />
        }
        else
        {
            <img style="height: 250px; width: 100%; display: block;"
                 src="@Url.Action("GetImage", "Product",new { Model.ID })" />
        }

        <div class="caption">
            <h3>
                @Model.Name
            </h3>
            <p>@Model.Price.ToString("c")</p>
            <p>
                @Model.Description
            </p>
            <p>
                @using (Html.BeginForm("AddToCart", "Cart"))
                {

                    @Html.HiddenFor(x => x.ID)
                    @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                <button type="submit" class="btn btn-warning">
                    <i class="glyphicon glyphicon-shopping-cart"></i>
                </button>
                }
                @using (Html.BeginForm("Detail", "Product"))
                {
                    @Html.HiddenFor(x => x.ID)
                    <button type="submit" class="btn btn-default">
                        查看详情
                    </button>
                }
            </p>
        </div>


    </div>
</div>