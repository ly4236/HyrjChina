<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Scripts.Render("~/bundles/jquery")
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/ErrorStyles.css" rel="stylesheet" />

    <script src="~/scripts/bootstrap.min.js"></script>
    <style>
        .dz-nav {
            margin-bottom: 0;
            background-color: #fff;
            border-bottom: 0;
        }

        .footer {
            background-color: #555555;
            min-height: 50px;
        }

            .footer a {
                color: #aaaaaa;
            }

                .footer a:hover {
                    color: #eaeaea;
                }

            .footer .footer-menu li {
                float: left;
                list-style: none;
                margin-left: 10px;
            }
    </style>
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-static-top dz-nav" role="banner">
        <div class="navbar-header pull-left">
            @Html.ActionLink("鼎智科技", "Index", "Home", null, new { @class = "navbar-brand" })
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("产品列表", "List", "Product")</li>
                <li><a href="#">客户服务</a></li>
                <li class="dropdown-toggle">
                </li>
            </ul>
        </div>
        <div class="navbar-header pull-right">
            <ul class="nav navbar-nav">
                @Html.Action("NavUser", "Nav")
                <li>
                    @Html.Action("Summary", "Cart")
                </li>
            </ul>
        </div>
    </nav>
    @RenderBody()
    <footer class="footer">
        <div class="footer-menu">
            <ul>
                <li>
                    @Html.ActionLink("公司简介", "Login", "Account", new { @returnUrl = Url.Action("Index", "Home", new { area = "Admin" }) }, new { @class = "btn-link" })
                </li>
                <li>
                    @Html.ActionLink("人才招聘", "Login", "Account", new { @returnUrl = Url.Action("Index", "Home", new { area = "Admin" }) }, new { @class = "btn-link" })
                </li>
                <li>
                    @Html.ActionLink("管理", "Home", "Admin", null, new { @class = "btn-link" })
                </li>
            </ul>
        </div>
    </footer>
</body>
</html>