@using HyrjChina.Web.Filters;
<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 我的 ASP.NET 应用程序</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("后台管理系统", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    @if (Request.Cookies[CustomerAuthorizationAttribute.CookieUserName] != null &&
                 string.IsNullOrWhiteSpace(Request.Cookies[CustomerAuthorizationAttribute.CookieUserName].Value) == false &&
                Session[Session.SessionID] != null)
                    {

                        //其他功能菜单

                    <li><a href="/UserManage">用户管理</a></li>
                    }

                </ul>

                @if (Request.Cookies[CustomerAuthorizationAttribute.CookieUserName] != null &&
                 string.IsNullOrWhiteSpace(Request.Cookies[CustomerAuthorizationAttribute.CookieUserName].Value) == false &&
                Session[Session.SessionID] != null)
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="/Profile"> @Request.Cookies[CustomerAuthorizationAttribute.CookieUserName].Value</a>
                        </li>
                        <li><a href="/Home/LoginOut">退出登录</a></li>
                    </ul>
                }

            </div>

        </div>
    </div>
    <div class="container-fluid body-content">
        <div style="min-height:600px;">
            @RenderBody()
        </div>
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - 后台管理系统</p>
            </footer>
        </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
