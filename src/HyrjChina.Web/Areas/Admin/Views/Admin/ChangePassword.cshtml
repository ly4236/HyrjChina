@model HyrjChina.Web.Areas.Admin.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "ChangePassword";
}
<div class="page-content">
    <div class="page-header">
        <h2>修改密码</h2>
        <div class="row">
            <div class="col-xs-12">
                @using (Html.BeginForm("ChangePassword", "Admin", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
                {
                    @Html.HiddenFor(m => m.UserId)
                    <div class="form-group">
                        @Html.LabelFor(m => m.OldPassword, null, new { @class = "col-sm-3 control-label no-padding-right" })
                        <div class="col-sm-9">
                            @Html.PasswordFor(m => m.OldPassword, new { @class = "col-xs-10 col-sm-5", placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "col-xs-12 col-sm-7" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.NewPassword, null, new { @class = "col-sm-3 control-label no-padding-right" })
                        <div class="col-sm-9">
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "col-xs-10 col-sm-5", placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "col-xs-12 col-sm-7" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.NewAgainPassword, null, new { @class = "col-sm-3 control-label no-padding-right" })
                        <div class="col-sm-9">
                            @Html.PasswordFor(m => m.NewAgainPassword, new { @class = "col-xs-10 col-sm-5", placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.NewAgainPassword, "", new { @class = "col-xs-12 col-sm-7" })
                        </div>
                    </div>
                    <div class="clearfix form-actions">
                        <div class="col-md-offset-3 col-md-9">
                            <button class="btn btn-info" type="submit">
                                <i class="icon-ok bigger-110"></i>
                                保存
                            </button>
                            <button class="btn" type="reset">
                                <i class="icon-undo bigger-110"></i>
                                重置
                            </button>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
