@model HyrjChina.Web.Areas.Admin.Models.OrderListViewModel

@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <div class="page-header">
        <h1>订单列表</h1>
        @*<div class="btn-group">
                @Html.ActionLink("添加一个新的商品", "Create", null, new { @class = "btn  btn-toolbar" })
                @Html.ActionLink("添加一个新的商品", "Create", null, new { @class = "btn  btn-toolbar" })
            </div>*@

    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="row">
                <div class="col-xs-11">
                    @using (Html.BeginForm("Index", "Product", FormMethod.Get))
                    {

                    }

                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="table-responsive">
                        <table class="table table-striped table-condensed table-bordered">
                            <tr>
                                <th>ID</th>
                                <th>订单号</th>
                                <th>商品名称</th>
                                <th>收货人姓名</th>
                                <th>订单状态</th>
                                <th>创建时间</th>
                                <th>支付时间</th>
                                <th class="text-center">操作</th>
                            </tr>

                            @foreach (var item in Model.Orders)
                            {
                                <tr>
                                    <td>
                                        @item.ID
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OrderNumber)
                                    </td>
                                    <td>
                                        <table>
                                            @foreach (var orderitem in item.OrderItems)
                                            {

                                                <tr>
                                                    <td>
                                                        @orderitem.Product.Name
                                                    </td>
                                                </tr>
                                            }
                                        </table>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address.ConsigneeName)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.OrderStatus)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreateTime)
                                    </td>


                                    <td>
                                        @Html.DisplayFor(modelItem => item.PaidTime)
                                    </td>
                                    <td class="text-center">
                                        @using (Html.BeginForm("Delete", "Product"))
                                        {
                                            <button type="submit"
                                                    class="btn btn-xs btn-primary"
                                                    value="审核">
                                                审核
                                            </button>
                                                <button type="submit"
                                                        class="btn btn-xs btn-success"
                                                        value="取消">
                                                    取消
                                                </button>
                                        }
                                    </td>
                                </tr> }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
