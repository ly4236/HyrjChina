@model HyrjChina.Web.Areas.Admin.Models.OrderListViewModel

@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <div class="page-header"><h1>订单列表</h1></div>
    <div class="row">
        <div class="col-xs-12">
            <div class="table-responsive">
                <table class="table table-striped table-condensed table-bordered">
                    <tr>
                        <th class="text-right">ID</th>
                        <th>订单号</th>
                        <th class="text-right">商品名称</th>
                        <th class="text-right">订单状态</th>
                        <th class="text-right">创建时间</th>
                        <th class="text-right">支付时间</th>
                        <th class="text-center">操作</th>
                    </tr>

                    @foreach (var item in Model.Orders)
                    {
                        <tr>
                            <td>
                                @item.ID
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderNumber)
                            </td>
                            <td>
                                <table>
                                    @foreach (var orderitem in item.OrderItems)
                                    {
                                        <tr>
                                            <td>
                                                @orderitem.Product.Name
                                            </td>
                                        </tr>
                                    }
                                </table>
                                @*Html.DisplayFor(modelItem => item.Product.Name )*@
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderStatus)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.CreateTime)
                            </td>


                            <td>
                                @Html.DisplayFor(modelItem => item.PaidTime)
                            </td>
                            <td class="text-center">
                                @using (Html.BeginForm("Delete", "Product"))
                                {
                                    <button type="submit"
                                            class="btn btn-xs btn-primary"
                                            value="处理">
                                        <i class="icon-trash bigger-120"></i>
                                    </button>
                                    <button type="submit"
                                            class="btn btn-xs btn-success"
                                            value="派送">
                                        <i class="icon-trash bigger-120"></i>
                                    </button>
                                    <button type="submit"
                                            class="btn btn-xs btn-danger"
                                            value="删除">
                                        <i class="icon-trash bigger-120"></i>
                                    </button>
                                }
                            </td>
                        </tr> }
                </table>
            </div>
        </div>
    </div>
</div>
